CREATE ROLE IF NOT EXISTS mw_user WITH
  LOGIN
  NOSUPERUSER
  INHERIT
  CREATEDB
  NOCREATEROLE
  REPLICATION
  ENCRYPTED PASSWORD 'md5bd250895dd67cee0f9ba14249ccc59a2';

DROP DATABASE IF EXISTS ksinformer;

CREATE DATABASE weather
    WITH
    OWNER = mw_user
    ENCODING = 'UTF8'
    LC_COLLATE = 'Russian_Russia.1251'
    LC_CTYPE = 'Russian_Russia.1251'
    TABLESPACE = pg_default
    CONNECTION LIMIT = -1;

GRANT TEMPORARY, CONNECT ON DATABASE weather TO PUBLIC;

GRANT ALL ON DATABASE weather TO mw_user;